<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:alertDialogStyle">@style/dialog</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="dialog">
        <item name="android:top">@drawable/alert_title</item>
        <item name="android:topDark">@drawable/alert_title</item>
    </style>

    <style name="StandardView">
        <item name="android:background">#ffc8c8c8</item>
    </style>

    <style name="StandardText">
        <item name="android:textColor">#ff202020</item>
    </style>

    <style name="StandardButtonLink">
        <item name="android:textColor">#ffe31900</item>
        <item name="android:background">#00000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandardInput">
        <item name="android:textColor">#ff484848</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
