<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8c8c8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.0.0"
            android:id="@+id/help_version"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/help_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:text="@string/help_title"
            android:layout_below="@+id/help_version"
            android:layout_alignEnd="@+id/help_message"
            android:gravity="center" />

        <TextView
            android:id="@+id/help_message"
            android:layout_below="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:text="@string/help_message"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1."
            android:id="@+id/textView8"
            android:layout_alignTop="@+id/help_item_1"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/help_item_1"
            android:layout_below="@+id/help_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2."
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/help_item_2"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/help_item_2"
            android:layout_below="@+id/help_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3."
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/help_item_3"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/help_item_3"
            android:layout_below="@+id/help_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="40dp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/textView6" />


    </RelativeLayout>

</ScrollView>